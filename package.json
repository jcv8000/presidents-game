        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "eslint": "^9.19.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.22.0",
        "vite": "^6.0.11",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "dependencies": {
