{
    "name": "webgame",
    "version": "1.0.0",
    "description": "",
    "author": "jcv8000",
    "license": "MIT",
    "private": "true",
    "type": "module",
    "scripts": {
        "server:dev": "bun --bun --watch --no-clear-screen server/index.ts",
        "server:build": "bun build server/index.ts --outdir dist/server --target bun",
        "client:dev": "bunx --bun vite",
        "client:build": "bunx --bun vite build",
        "dev": "NODE_ENV='development' concurrently -n Server,Client -c yellow,green \"bun:server:dev\" \"bun:client:dev\"",
        "start": "bunx --bun vite build && bun --bun server/index.ts",
        "build": "bun run server:build && bun run client:build",
        "serve": "bun --bun --smol dist/server/index.js",
        "clean": "rimraf dist/",
        "test": "tsc && bunx eslint && bunx prettier . --check",
        "lint": "bunx prettier . --write"
    },
    "devDependencies": {
        "@types/bun": "^1.2.2",
        "@types/express": "^5.0.0",
        "@types/js-cookie": "^3.0.6",
        "@types/node": "^22.13.1",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@types/validator": "^13.12.2",
        "@vitejs/plugin-react": "^4.3.4",
        "concurrently": "^9.1.2",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.18",
        "globals": "^15.14.0",
        "postcss-preset-mantine": "^1.17.0",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0",
        "vite": "^6.0.11",
        "vite-plugin-pwa": "^0.21.1",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "dependencies": {
        "@mantine/core": "^7.16.2",
        "@mantine/hooks": "^7.16.2",
        "@mantine/notifications": "^7.16.2",
        "@tabler/icons-react": "^3.29.0",
        "express": "^5.0.1",
        "js-cookie": "^3.0.5",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router": "^7.1.5",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "uuid": "^11.0.5",
        "validator": "^13.12.0",
        "valtio": "^2.1.3"
    },
    "engines": {
        "node": ">=18"
    }
}
